{
    "mashling_schema": "1.0",
    "gateway": {
        "name": "Gateway",
        "version": "1.0.0",
        "description": "This is a simple gateway opens a websocket connection to Mashery logs stream, parse each log message and creates an event in case of error/failure log.",
        "triggers": [
            {
                "name": "LogsListener",
                "description": "Listens to websocket endpoint",
                "type": "github.com/TIBCOSoftware/mashling/ext/flogo/trigger/wssub",
                "settings": {
                    "url": "wss://logstream-api.mashery.com/ecls/subscribe/9c824242-ac7e-4b40-8010-64fed84eac6e/49562fb6-0d19-403b-8096-70d35ce4ea5a?key=XXygjRKoTzVJYZceNrfKoBplFstqDbRTKAt"
                },
                "handlers": [
                    {
                        "dispatch": "ProcessLog"
                    }
                ]
            }
        ],
        "dispatches": [
            {
                "name": "ProcessLog",
                "routes": [
                    {
                        "steps": [
                            {
                                "if": "payload.content.data[0].http_status_code == 404",
                                "service": "LogService",
                                "input": {
                                    "inputs.message": "DETECTED 404"
                                }
                            },
                            {
                                "if": "payload.content.data[0].http_status_code == 404",
                                "service": "SendNotificationEMail"
                            }
                        ],
                        "responses": []
                    }
                ]
            }
        ],
        "services": [
            {
                "name": "LogService",
                "description": "Log on error",
                "type": "flogoActivity",
                "settings": {
                    "ref": "github.com/TIBCOSoftware/flogo-contrib/activity/log"
                }
            },
            {
                "name": "SendNotificationEMail",
                "description": "Invokes specified url to send mail",
                "type": "http",
                "settings": {
                    "url": "https://api.sendgrid.com/v3/mail/send",
                    "method": "POST",
                    "body": {
                        "personalizations": [
                            {
                                "to": [
                                    {
                                        "email": "rpolishe@tibco.com"
                                    }
                                ]
                            }
                        ],
                        "from": {
                            "email": "mashling-recipes@sendgrid.net"
                        },
                        "subject": "[Status] Websocket Eventing Gateway",
                        "content": [
                            {
                                "type": "text/plain",
                                "value": "Mashling gateway backend service is down"
                            }
                        ]
                    },
                    "headers": {
                        "Content-Type": "application/json",
                        "Authorization": "Bearer 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"
                    }
                }
            }
        ]
    }
}