{
  "mashling_schema": "1.0",
  "gateway": {
    "name": "RestTrigger-To-Kafkapublisher",
		"version": "1.0.0",
		"display_name":"HTTP Trigger to Kafka Publisher",
		"display_image":"displayImage.svg",
		"description": "This recipe publishes the Rest Trigger content payload to Kafka Topic as message.",
    "triggers": [
      {
        "name": "MyProxy",
        "description": "Animals rest trigger - PUT animal details",
        "type": "github.com/TIBCOSoftware/mashling/ext/flogo/trigger/gorillamuxtrigger",
        "settings": {
          "port": "9096"
        },
        "handlers": [
          {
            "dispatch": "Pets1",
            "settings": {
              "autoIdReply": "false",
              "method": "PUT",
              "path": "/petEvent",
              "useReplyHandler": "false"
            }
          }
        ]
      }
    ],
    "dispatches": [
      {
        "name": "Pets1",
        "routes": [
          {
            "steps": [
              {
                "service": "FlogoRestPutFlow",
                "input": {
                  "inputs.content": "${payload.content}"
                }
              }
            ],
            "responses": [
              {
                "error": false,
                "output": {
                  "code": 200,
                  "data": {
                    "status": "Success"
                  }
                }
              }
            ]
          }
        ]
      }
    ],
    "services": [
      {
        "name": "FlogoRestPutFlow",
        "description": "Make GET calls against a remote HTTP service using a Flogo flow.",
        "type": "flogoFlow",
        "settings": {
          "reference": "github.com/TIBCOSoftware/mashling/lib/flow/RestTriggerToKafkaActivity.json"
        }
      }
    ]
  }
}
