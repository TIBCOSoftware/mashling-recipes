{
  "mashling_schema": "1.0",
  "gateway": {
    "name": "MyProxy",
    "version": "1.0.0",
    "description": "This is a simple proxy.",
    "triggers": [
      {
        "name": "MyProxy",
        "description": "Animals rest trigger - PUT animal details",
        "type": "github.com/TIBCOSoftware/mashling/ext/flogo/trigger/gorillamuxtrigger",
        "settings": {
          "port": "9096"
        },
        "handlers": [
          {
            "dispatch": "hello_trigger",
            "settings": {
              "method": "GET",
              "path": "/hello/{name}",
              "optimize": "true"
            }
          },
          {
            "dispatch": "bye_trigger",
            "settings": {
              "method": "GET",
              "path": "/bye/{name}",
              "optimize": "true"
            }
          }
        ]
      }
    ],
    "dispatches": [
      {
        "name": "hello_trigger",
        "routes": [
          {
            "steps": [
              {
                "service": "get_handler",
                "input": {
                  "inputs.id": "${pathParams.name}",
                  "inputs.endPoint": "${env.HELLO_API_ENDPOINT}"
                }
              }
            ],
            "responses": [
              {
                "if": "get_handler.response.outputs.code == 200",
                "error": false,
                "output": {
                  "code": 200,
                  "format": "json",
                  "body": "${get_handler.response.outputs.data}"
                }
              }
            ]
          }
        ]
      },
      {
        "name": "bye_trigger",
        "routes": [
          {
            "steps": [
              {
                "service": "get_handler",
                "input": {
                  "inputs.id": "${pathParams.name}",
                  "inputs.endPoint": "${env.BYE_API_ENDPOINT}"
                }
              }
            ],
            "responses": [
              {
                "if": "get_handler.response.outputs.code == 200",
                "error": false,
                "output": {
                  "code": 200,
                  "format": "json",
                  "body": "${get_handler.response.outputs.data}"
                }
              }
            ]
          }
        ]
      }
    ],
    "services": [
      {
        "name": "get_handler",
        "description": "Make GET calls against a remote HTTP service using a Flogo flow.",
        "type": "flogoFlow",
        "settings": {
          "reference": "github.com/TIBCOSoftware/mashling/lib/flow/TunableRestInvoker.json"
        }
      }
    ]
  }
}
