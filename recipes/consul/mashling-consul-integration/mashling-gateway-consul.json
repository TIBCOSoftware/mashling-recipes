{
  "mashling_schema": "1.0",
  "gateway": {
    "name": "MyProxy",
    "version": "1.0.0",
    "description": "This is a simple proxy.",
    "triggers": [
      {
        "name": "restConfig",
        "description": "Animals rest trigger - PUT animal details",
        "type": "github.com/TIBCOSoftware/mashling/ext/flogo/trigger/gorillamuxtrigger",
        "settings": {
          "port": "9096"
        },
        "handlers": [
          {
            "dispatch": "Pets",
            "settings": {
              "autoIdReply": "false",
              "method": "GET",
              "path": "/pets/{petId}",
              "useReplyHandler": "false"
            }
          },
          {
            "dispatch": "Pets1",
            "settings": {
              "autoIdReply": "false",
              "method": "PUT",
              "path": "/pets",
              "useReplyHandler": "false"
            }
          }
        ]
      },
      {
        "name": "secureConfig",
        "description": "Animals rest trigger - PUT animal details",
        "type": "github.com/TIBCOSoftware/mashling/ext/flogo/trigger/gorillamuxtrigger",
        "settings": {
          "port": "9098",
          "enableTLS": "true",
          "serverCert":"${env.SERVER_CERT}",
          "serverKey":"${env.SERVER_KEY}",
          "enableClientAuth": "true",
          "trustStore": "${env.TRUST_STORE}"
        },
        "handlers": [
          {
            "dispatch": "Pets2",
            "settings": {
              "autoIdReply": "false",
              "method": "GET",
              "path": "/pets/{petId}",
              "useReplyHandler": "false"
            }
          }
        ]
      }
    ],
    "dispatches": [
      {
        "name": "Pets",
        "routes": [
          {
            "steps": [
              {
                "service": "animals_get_handler",
                "input": {
                  "inputs.pathParams": "${payload.pathParams}"
                }
              }
            ],
            "responses": [
              {
                "if": "FlogoRestGetFlow.response.outputs.code != 200",
                "error": true,
                "output": {
                  "code": 403,
                  "format": "json",
                  "body": "Pet is not available."
                }
              },
              {
                "if": "FlogoRestGetFlow.response.outputs.code == 200",
                "error": false,
                "output": {
                  "code": 200,
                  "format": "json",
                  "body": "${FlogoRestGetFlow.response.outputs.data}"
                }
              }
            ]
          }
        ]
      },
      {
        "name": "Pets1",
        "routes": [
          {
            "if": "payload.content.name == 'ELEPHANT' || payload.content.name == 'CAT'",
            "steps": [
              {
                "service": "mammals_handler",
                "input": {
                  "inputs.content": "${payload.content}"
                }
              }
            ],
            "responses": [
              {
                "if": "mammals_handler.response.outputs.code != 200",
                "error": true,
                "output": {
                  "code": 403,
                  "format": "json",
                  "body": "Pet is not available."
                }
              },
              {
                "if": "mammals_handler.response.outputs.code == 200",
                "error": false,
                "output": {
                  "code": 200,
                  "format": "json",
                  "body": "${mammals_handler.response.outputs.data}"
                }
              }
            ]
          },
          {
            "if": "payload.content.name == 'SPARROW'",
            "steps": [
              {
                "service": "birds_handler",
                "input": {
                  "inputs.content": "${payload.content}"
                }
              }
            ],
            "responses": [
              {
                "if": "birds_handler.response.outputs.code != 200",
                "error": true,
                "output": {
                  "code": 403,
                  "format": "json",
                  "body": "Pet is not available."
                }
              },
              {
                "if": "birds_handler.response.outputs.code == 200",
                "error": false,
                "output": {
                  "code": 200,
                  "format": "json",
                  "body": "${birds_handler.response.outputs.data}"
                }
              }
            ]
          },
          {
            "steps": [
              {
                "service": "animals_handler",
                "input": {
                  "inputs.content": "${payload.content}"
                }
              }
            ],
            "responses": [
              {
                "if": "animals_handler.response.outputs.code != 200",
                "error": true,
                "output": {
                  "code": 403,
                  "format": "json",
                  "body": "Pet is not available."
                }
              },
              {
                "if": "animals_handler.response.outputs.code == 200",
                "error": false,
                "output": {
                  "code": 200,
                  "format": "json",
                  "body": "${animals_handler.response.outputs.data}"
                }
              }
            ]
          }
                  ]
      },
      {
        "name": "Pets2",
        "routes": [
          {
            "steps": [
              {
                "service": "animals_get_handler1",
                "input": {
                  "inputs.pathParams": "${payload.pathParams}"
                }
              }
            ],
            "responses": [
              {
                "if": "animals_get_handler1.response.outputs.code != 200",
                "error": true,
                "output": {
                  "code": 403,
                  "format": "json",
                  "body": "Pet is not available."
                }
              },
              {
                "if": "animals_get_handler1.response.outputs.code == 200",
                "error": false,
                "output": {
                  "code": 200,
                  "format": "json",
                  "body": "${animals_get_handler1.response.outputs.data}"
                }
              }
            ]
          }
        ]
      }
    ],
    "services": [
      {
        "name": "mammals_handler",
        "description": "Make GET calls against a remote HTTP service using a Flogo flow.",
        "type": "flogoFlow",
        "settings": {
          "reference": "github.com/TIBCOSoftware/mashling/lib/flow/RestTriggerToRestPutActivity.json"
        }
      },
      {
        "name": "birds_handler",
        "description": "Make GET calls against a remote HTTP service using a Flogo flow.",
        "type": "flogoFlow",
        "settings": {
          "reference": "github.com/TIBCOSoftware/mashling/lib/flow/RestTriggerToRestPutActivity.json"
        }
      },
      {
        "name": "animals_handler",
        "description": "Make GET calls against a remote HTTP service using a Flogo flow.",
        "type": "flogoFlow",
        "settings": {
          "reference": "github.com/TIBCOSoftware/mashling/lib/flow/RestTriggerToRestPutActivity.json"
        }
      },
      {
        "name": "animals_get_handler",
        "description": "Make GET calls against a remote HTTP service using a Flogo flow.",
        "type": "flogoFlow",
        "settings": {
          "reference": "github.com/TIBCOSoftware/mashling/lib/flow/RestTriggerToRestGetActivity.json"
        }
      },
      {
        "name": "animals_get_handler1",
        "description": "Make GET calls against a remote HTTP service using a Flogo flow.",
        "type": "flogoFlow",
        "settings": {
          "reference": "github.com/TIBCOSoftware/mashling/lib/flow/SecureRestInvoker.json"
        }
      }
    ]
  }
}
