{
  "mashling_schema": "1.0",
  "gateway": {
    "name": "MyProxy",
    "version": "1.0.0",
    "description": "This is a simple proxy.",
    "triggers": [
      {
        "name": "MyProxy",
        "description": "Animals rest trigger - PUT animal details",
        "type": "github.com/TIBCOSoftware/mashling/ext/flogo/trigger/gorillamuxtrigger",
        "settings": {
          "port": "9096"
        },
        "handlers": [
          {
            "dispatch": "Pets",
            "settings": {
              "autoIdReply": "false",
              "method": "GET",
              "path": "/id/{id}",
              "useReplyHandler": "false"
            }
          }
        ]
      }
    ],
    "dispatches": [
      { 
        "name": "Pets",
        "routes": [
          { 
            "if": "env.API_CONTEXT == 'USERS'",
            "steps": [
              { 
                "service": "FlogoRestGetFlow",
                "input": {
                  "inputs.id": "${payload.pathParams.id}",
                  "inputs.endPoint": "http://petstore.swagger.io/v2/user/:id"
                }
              }
            ],
            "responses": [
              {
                "if": "FlogoRestGetFlow.response.outputs.code != 200",
                "error": true,
                "output": {
                  "code": 403,
                  "format": "json",
                  "body": "User is not available."
                }
              },
              {
                "if": "FlogoRestGetFlow.response.outputs.code == 200",
                "error": false,
                "output": {
                  "code": 200,
                  "format": "json",
                  "body": "${FlogoRestGetFlow.response.outputs.data}"
                }
              }
            ]
          },
          { 
            "steps": [
              { 
                "service": "FlogoRestGetFlow",
                "input": {
                  "inputs.id": "${payload.pathParams.id}",
                  "inputs.endPoint": "http://petstore.swagger.io/v2/pet/:id"
                }
              }
            ],
            "responses": [
              {
                "if": "FlogoRestGetFlow.response.outputs.code != 200",
                "error": true,
                "output": {
                  "code": 403,
                  "format": "json",
                  "body": "Pet is not available."
                }
              },
              {
                "if": "FlogoRestGetFlow.response.outputs.code == 200",
                "error": false,
                "output": {
                  "code": 200,
                  "format": "json",
                  "body": "${FlogoRestGetFlow.response.outputs.data}"
                }
              }
            ]
          }
        ]
      }
    ],
    "services": [
      {
        "name": "FlogoRestGetFlow",
        "description": "Make GET calls against a remote HTTP service using a Flogo flow.",
        "type": "flogoFlow",
        "settings": {
          "reference": "github.com/TIBCOSoftware/mashling/lib/flow/TunableRestInvoker.json"
        }
      }
    ]
  }
}